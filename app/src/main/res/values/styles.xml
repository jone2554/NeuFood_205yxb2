<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTextGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/myratingbar</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="RadioCollectLeft">
        <item name="android:background">@drawable/selector_radio_left_collect</item>
        <item name="android:textColor">@color/selector_radio_text_collect</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioCollectRight" parent="RadioCollectLeft">
        <item name="android:background">@drawable/selector_radio_right_collect</item>
    </style>

</resources>
